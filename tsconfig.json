{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "paths": {
      "@fuse": ["@fuse/"],
      "sx-core": ["dist/sx-core"],
      "sx-core/*": ["dist/sx-core/*"],
      "sx-auth": ["dist/sx-auth"],
      "sx-auth/*": ["dist/sx-auth/*"]
    },
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"]
  }
}
